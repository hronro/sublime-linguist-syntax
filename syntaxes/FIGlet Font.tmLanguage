( (-(?:0[Xx])?0*1)(?=\s|$)        # Invalid -1
| (\+?(?:[1-9][0-9]*|0(?=\s|$))) # Decimal
| (\+?0[0-7]+)                    # Octal
| (\+?0[Xx][0-9A-Fa-f]+)          # Hex
)
(?:\s+(\S.*))?
(?=\s*$)</string>
