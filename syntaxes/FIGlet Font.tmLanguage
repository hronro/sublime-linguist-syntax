			<key>name</key>
			<string>constant.character.sub-character.figfont</string>
			<key>match</key>
			<string>[^#@\s]+|#+(?!#*[ \t]*$)|@+(?!@*[ \t]*$)</string>
		</dict>
		<key>integer</key>
		<dict>
			<key>name</key>
			<string>constant.numeric.decimal.integer.int.figfont</string>
			<key>match</key>
			<string>[-+]?[0-9]+</string>
